<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="stylesheets/style.css">
    <title>Board view</title>
</head>
<body>
    <!--nav-->
    <nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom border-black">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">옷입히기</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">만들기</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/board">게시판</a>
                    </li>
                </ul>
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="게시판 검색" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">search</button>
                </form>
            </div>
        </div>
    </nav>

    <!--게시글 본문-->
    <main class="board_view mt-3 mx-5 px-5">
        <section>
            <% boardView.forEach(boardView=>{ %>
                <div class="view_content">
                    <header class="d-flex flex-column">
                        <div class="view_title mb-2 ">
                            <h3><%= boardView.title %></h3>
                        </div>
                        <!--이름 날짜 & 조회 추천-->
                        <div class="view_info d-flex justify-content-between mt-2 pb-2 border-3 border-bottom border-primary-subtle">
                            <div class="fl">
                                <%= boardView.writer %> / <%= moment(boardView.date).format("YYYY.MM.DD h:mm:ss a") %>
                            </div>
                            <div class="fr">
                                <%= boardView.views %> / <%= boardView.likeCount %>
                            </div>
                        </div>
                    </header>
                    <div class="view_main mt-5">
                        <div><img src="<%= boardView.imageFile %>" alt="image" srcset=""></div>
                        <div><%= boardView.content %></div>
                    </div>
                </div>
            <% }) %>
        </section>
    </main>
    <footer class="m-5 px-5">
        <div class="utils d-md-flex justify-content-md-end">
            <button class="like_btn btn btn-light border border-primary mx-2">좋아요</button>
            <a class="btn btn-secondary" href="/board">목록</a>
        </div>
    </footer>

    
    <script>
        const queryButton = document.getElementById('like_btn');
        queryButton.addEventListener('click', () => {
            fetch('/increase-query-count/<%= boardView.id %>',{
                method: 'POST',
            })
                .then(response => {
                    if (response.ok) {
                        console.log('Query 증가 요청 성공');
                    } else {
                        console.log('Query 증가 요청 실패');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        });
    </script>

</body>
</html>